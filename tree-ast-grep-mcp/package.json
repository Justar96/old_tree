{
  "name": "tree-ast-grep-mcp",
  "version": "1.0.15",
  "description": "Simple, direct ast-grep wrapper for AI coding agents. Zero abstractions, maximum performance.",
  "main": "./build/index.js",
  "bin": {
    "tree-ast-grep-mcp": "build/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run build",
    "test": "node tests/runner.js",
    "test:unit": "node tests/runner.js --unit",
    "test:integration": "node tests/runner.js --integration",
    "test:e2e": "node tests/runner.js --e2e",
    "test:stress": "node tests/runner.js --stress",
    "test:security": "node tests/runner.js --security",
    "test:real-world": "node tests/runner.js --real-world",
    "test:complex": "node tests/runner.js --complex",
    "test:all": "node tests/runner.js --all",
    "test:watch": "node tests/runner.js --watch",
    "test:coverage": "node tests/runner.js --coverage"
  },
  "keywords": [
    "mcp",
    "ast-grep",
    "code-search",
    "structural-search",
    "refactoring",
    "ast",
    "simple",
    "direct",
    "zero-abstraction"
  ],
  "author": "justar96",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justar96/tree-ast-grep-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "c8": "^8.0.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "optionalDependencies": {
    "tree-ast-grep-mcp-darwin": "^1.0.0",
    "tree-ast-grep-mcp-linux": "^1.0.0",
    "tree-ast-grep-mcp-win32": "^1.0.0"
  },
  "mcpServers": {
    "tree-ast-grep": {
      "command": "npx",
      "args": [
        "-y",
        "tree-ast-grep-mcp"
      ]
    }
  }
}
