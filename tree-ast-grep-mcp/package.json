{
  "name": "tree-ast-grep-mcp",
  "version": "1.0.10",
  "description": "AST-aware code search and manipulation MCP server using ast-grep",
  "main": "./build/index.js",
  "bin": {
    "tree-ast-grep-mcp": "build/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "ast-grep",
    "code-search",
    "refactoring",
    "structural-search",
    "ast",
    "code-analysis"
  ],
  "author": "justar96",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justar96/tree-ast-grep-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "optionalDependencies": {
    "tree-ast-grep-mcp-win32": "^1.0.0",
    "tree-ast-grep-mcp-darwin": "^1.0.0",
    "tree-ast-grep-mcp-linux": "^1.0.0"
  },
  "mcpServers": {
    "tree-ast-grep": {
      "command": "npx",
      "args": [
        "-y",
        "tree-ast-grep-mcp"
      ]
    }
  }
}
